@{
    ViewData["Title"] = "AdminDestinos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listDest = ViewData["ListDest"] as List<Destinos>;
}
@model Destinos;
@if (TempData.ContainsKey("Exception"))
{
    @Html.Raw(TempData["Exception"].ToString())
    ;
}
<div class="ui container segment">
    <a class="ui blue ribbon label">Gestion del Chofer</a>
    <form method="post" action="@Url.Action("Index","AdministrarDestinos")">
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>Opcion</th>
                    <th>Destino</th>
                    <th>Costo</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewData.ContainsKey("ListDest"))
                {
                    @foreach(var item in listDest)
                    {
                        <tr>
                            <td><button class="ui secondary button" name="CveDestino" value="@item.CveDestino" asp-action="SelectDestino">Seleccionar</button></td>
                            <td>@item.Nombre</td>
                            <td>$ @item.Costo </td>
                        </tr>
                    }
                }
                
            </tbody>
        </table>
        <div class="fields">
            <div class="five wide field">
                <button class="ui primary button" type="submit" name="accion" value="GenerarNuevoView">Crear Nuevo</button>
            </div>
        </div>
    </form>
</div>